doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Edit Detail
        link(rel="stylesheet", href="../css/style.css")
        
    body 
        include ./header 
        h3 Edite la película 
        main 
            form(action="/editmoviedetail" method="POST" class="createmovieform")
                div(class="inputs")
                    input(type="text" name="id_movie" style={display: 'none'} value=`${id_movie}`)
                    label(for="Title") Título
                    input(type="text" name="title" value=`${Title}`)
                    label(for="Director") Director
                    input(type="text" name="director" value=`${Director}`)
                    label(for="Year") Año
                    input(type="text" name="year" value=`${Year}`)
                    label(for="Runtime") Duración 
                    input(type="text" name="runtime" value=`${Runtime}`)
                    label(for="Poster") Poster Url
                    input(type="text" name="poster" value=`${Poster}`)
                    label(for="Genero") Género
                    input(type="text" name="genre" value=`${Genre}`)
                    label(for="argumento") Argumento
                    input(type="text" name="plot" value=`${Plot}`)
                    label(for="actores") Actores
                    input(type="text" name="actors" value=`${Actors}`)
                    label(for="opioniones") Opiniones
                    input(type="text" name="ratings" value=`${Ratings}`)
                    button(type="submit" value="Editar") Editar película 

        

        include ./footer 
        script(src="../public/js/editdetail.js") 
    