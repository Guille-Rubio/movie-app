doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Search
        link(rel="stylesheet", href="./css/style.css")
        script. 
            const form = document.getElementById("movie");
            form.addEventListener("submit",(event) => {
                event.preventDefault();
                const movie = event.target.elements.search.value;
                window.location =`http://localhost:3000/api/search/${movie}`
            })
    body 
        include ./header.pug

        main
            form(action="/search" id="movie")
                label(for="title")
                input(type="text" id="title" name="title" placeholder="Search Movie")
                input(type="submit", value="Buscar")
                

        include ./footer.pug