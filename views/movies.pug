doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Movies

    body 
        include ./header.pug

            
        section(id="cardContainer")
            each movie in movies
                article 
                    p title: #{movie.title}
                    img(src=movie.poster)
                    p year: #{movie.year}
                    p director: #{movie.director}
                    p genre: #{movie.genre}
                    p runtime: #{movie.runtime}
                    p plot: #{movie.plot}
                    p actor: #{movie.actor}
                    p opinions: #{movie.opinions}

        include ./footer.pug