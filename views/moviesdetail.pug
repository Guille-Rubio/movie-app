doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Movies Detail
        link(rel="stylesheet", href="./css/style.css")

    body
        include ./header 
        h2 Detalle de película
        main

            each movie in detalles    
                section
                    p Titulo: #{movie.Title}
                    img(src=movie.Poster, alt="poster")
                    p Año: #{movie.Year}
                    p Directores: #{movie.Director}
                    p Genero: #{movie.Genre}
                    p Duración:  #{movie.Runtime}
                    
                    a(href='/movies/'+movie.imdbID) 
                        button Más detalles
                    button(class="addFavBtn" value=imdbID) Añadir a favoritos
            
        include ./footer
        script(src="/js/addfavourites.js")