doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Movies Detail

    body
        include ./header 
        main
            p Titulo: #{Title}
            img(src="#{Poster}", alt="poster")
            p Año: #{Year}
            p Duración:  #{Runtime}
            p Genero: #{Genre}
            p Directores: #{Director}
            p Actores: #{Actors}
            p Argumento: #{Plot}

        include ./footer