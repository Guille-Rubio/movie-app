doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Index
        link(rel="stylesheet", href="../css/style.css")
        include ./font.pug
    body

        include ./header.pug 
        main
           
            img(src="./assets/img/perropalomitas.png" alt='imagen de prueba' class="imgindex")

            form(method="POST" action="/login" class="login-form")
                input(type="text",name="email" placeholder="email")
                input(type="password", name="password" placeholder="password")
                div(id="show-password")
                    input(type="checkbox")
                    span(class="small-text") Show password
                input(type="submit", value="login") 
                    
            span(class="small-text") You don't have an account?,  
                a(href="/signup" class="small-text") Sign up here.
            
            span(class="small-text") You forgot your password?  
                a(href="/recoverpassword" class="small-text") recover it here.
        script(src="/js/index.js") 

            

    

